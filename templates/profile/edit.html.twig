{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<section class="form-section">
    <h2>Modifier</h2>
    <form id="edit-form" action="{{ path('app_edit') }}" method="post">
        <div class="form-card">
            <div class="div-form">
                <label for="pseudo">Pseudo</label>
                <input class="input-form" id="pseudo" name="pseudo" type="text" required>
            </div>
            <div class="div-form">
                <label for="email">Email</label>
                <input class="input-form" id="email" name="email" type="email" required>

            </div>
            <div class="div-form">
                <label for="password">Mot de passe</label>
                <input class="input-form" id="password" name="password" type="password" required
                    autocomplete="current-password">
            </div>
        </div>
        <div class="submit-div">
            <label></label>
            <input class="btn btn-form" id="edit" name="edit" type="submit" value="Modifier profil">
        </div>
    </form>
</section>
{% endblock %}
