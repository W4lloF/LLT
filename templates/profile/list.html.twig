{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<section class="table-section">
    <h2>Utilisateurs</h2>

    <div class="table-card">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Date d'inscription</th>
                    <th>Feedback</th>
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.registrationDate ? user.registrationDate|date('d/m/Y H:i') : '-' }}</td>
                    <td>
                        <a href="{{ path('app_createfeedback', {'id': user.id}) }}" class="btn btn-border">
                            Faire un feedback
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Aucun utilisateur trouv√©.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}
