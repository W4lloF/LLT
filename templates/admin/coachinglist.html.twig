{% extends 'base.html.twig' %}

{% block title %}Liste des demandes{% endblock %}

{% block body %}
<section class="table-section">
    <h2>Demandes</h2>

    <div class="table-card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Utilisateur</th>
                    <th>Coach</th>
                    <th>Type de coaching</th>
                    <th>Date/Heure</th>
                    <th>Accepter</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for coaching in coachings %}
                <tr>
                    <td>{{ coaching.id }}</td>
                    <td>{{ coaching.user.username }}</td>
                    <td>{{ coaching.coach.pseudo }}</td>
                    <td>{{ coaching.coachingtype }}</td>
                    <td>{{ coaching.datetime ? coaching.datetime|date('d/m/Y H:i') : '-' }}</td>
                    <td>
                        {% if coaching.status == 'waiting' %}
                        <a href="{{ path('app_coachingsaccept', {'id': coaching.id}) }}" class="btn btn-border">
                            Accepter
                        </a>
                        {% elseif coaching.status == 'accepted' %}
                        En attente
                        {% endif %}
                    </td>
                    <td>
                        {% if coaching.status == 'waiting' %}
                        <a href="{{ path('app_coachingsdelete', {'id': coaching.id}) }}" class="btn"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette demande ?');">
                            Supprimer
                        </a>
                        {% elseif coaching.status == 'accepted' %}
                        <a href="{{ path('app_coachingsdone', {'id': coaching.id}) }}" class="btn btn-border">
                            Terminer
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">Aucune demande en attente</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}
