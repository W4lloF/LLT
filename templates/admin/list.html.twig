{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<section class="table-section">
    <h2>Liste des utilisateurs</h2>

    <div class="table-card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Date d'inscription</th>
                    <th>Supprimer</th>
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>{{ user.registrationDate ? user.registrationDate|date('d/m/Y H:i') : '-' }}</td>
                    <td>
                        <a href="{{ path('app_userdelete', {'username': user.username}) }}" class="btn"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">Aucun utilisateur trouvé.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}
